<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= link_to "New Post", new_article_path(@article), class: 'btn btn-success me-3' %>
      <% @articles.each do |art| %>
        <div class="alert alert-light">
          <h3>
            <%= art.headline %>
          </h3>
        </div>
        <div class="alert alert-light">
          <p>
            <%= art.content %>
          </p>
          <p>
            <%= art.created_at %>
          </p>
        </div>
        <div class="form-group"></div>
        <br/>
        <div style="display: flex;">
        <%= link_to 'Show', article_path(art), class: 'btn btn-primary me-3' %>
        <%= link_to 'Edit', edit_article_path(art), class: 'btn btn-success me-3' %>
        <%= button_to "Destroy", art, method: :delete, class: 'btn btn-danger' %>
        </div>
        <hr/>
      <% end %>
    </div>
      <ul class="pagination justify-content-center ">
        <li class="page-item">
            <%= paginate @articles %>
        </li>
    </ul>
  </div>
</div>

