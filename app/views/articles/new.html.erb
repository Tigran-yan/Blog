<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_for @article do |f| %>
        <div class="form-group">
          <%= f.label :headline %>
          <%= f.text_area :headline, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.rich_text_area :content %>
        </div>
        <div class="form-group">
          <br/>
          <%= f.submit class: 'form-control btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>